<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="luis_beuth_mobile.Views.StudentLogin"
             Title="Anmelden">
  <ContentPage.Padding>
    <!--<DAmit Text in Ios nicht in BAtterieleiste steht>-->
    <OnPlatform x:TypeArguments="Thickness"
    iOS = "20,40,20,20"
                Android ="20,20,20,20"/>

  </ContentPage.Padding>

 <ContentPage.Content>
    <StackLayout VerticalOptions="StartAndExpand" Padding="30">

      <Label Text ="Bitte gebe Deinen Namen ein:"></Label>
      <Entry Text="" x:Name="studentName" />

      <Button Text="Weiter" Clicked="Login" />

    </StackLayout>
  </ContentPage.Content>

</ContentPage>
